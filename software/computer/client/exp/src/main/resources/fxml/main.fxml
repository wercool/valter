                        <AnchorPane id="Content" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                          <children>
                            <Button fx:id="forwardBtn" layoutX="40.0" layoutY="4.0" mnemonicParsing="false" styleClass="forward-button" text="">
