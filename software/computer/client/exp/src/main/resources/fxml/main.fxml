<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane id="BorderPane" prefHeight="600.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2">
  <center>
    <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
      <tabs>
        <Tab text="PLATFORM CONTROL P1">
          <content>
            <AnchorPane id="Content" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
          </content>
        </Tab>
        <Tab text="PLATFORM LOCATION P1">
          <content>
            <AnchorPane id="Content" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
          </content>
        </Tab>
        <Tab text="CONNECTIONS">
          <content>
            <AnchorPane id="Content" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
              <children>
                <TableView fx:id="deviceTable" minWidth="-1.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                  <columns>
                    <TableColumn maxWidth="5000.0" minWidth="10.0" prefWidth="136.0" text="Device Port" fx:id="portNameCol" />
                    <TableColumn maxWidth="5000.0" minWidth="10.0" prefWidth="301.0" text="Device Name" fx:id="deviceNameCol" />
                    <TableColumn maxWidth="5000.0" minWidth="10.0" prefWidth="115.0" text="Connected" fx:id="deviceConnectedCol" />
                  </columns>
                </TableView>
                <Button fx:id="scanBoardsBtn" onAction="#scanBoardsBtnAction" mnemonicParsing="false" text="Scan" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="215.0" />
                <Button  fx:id="connectDisconnectBoardBtn" onAction="#connectDisconnectBoardBtnAction" mnemonicParsing="false" text="Connect / Disconnect Selected" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="215.0" />
              </children>
            </AnchorPane>
          </content>
        </Tab>
      </tabs>
    </TabPane>
  </center>
</BorderPane>
