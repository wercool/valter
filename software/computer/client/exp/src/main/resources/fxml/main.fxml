                    <Font size="13.0" />
                  </font>
                </Label>
                <Button fx:id="clearConsoleBtn" mnemonicParsing="false" onAction="#clearConsoleBtnAction" text="Clear console" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="250.0" />
                <CheckBox fx:id="logIncoming" mnemonicParsing="false" text="Incoming" AnchorPane.leftAnchor="105.0" AnchorPane.topAnchor="250.0" />
                <CheckBox fx:id="logOutgoing" mnemonicParsing="false" text="Outgoing" AnchorPane.leftAnchor="200.0" AnchorPane.topAnchor="250.0" />
              </children>
            </AnchorPane>
          </content>
        </Tab>
      </tabs>
    </TabPane>
