<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#80000000"
    android:padding="0dp"
    tools:context="ua.in.wercool.valterclient.ValterManualNavigation">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:alpha="0.25"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.05"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/leftDutyIncreaseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plus" />

            <ProgressBar
                android:id="@+id/leftDutyIndicator"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:max="100"
                android:progress="20"
                android:progressDrawable="@drawable/motor_duty_indicator" />

            <ImageButton
                android:id="@+id/leftDutyDecreaseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/minus" />

        </LinearLayout>


        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.9">

            <Button
                android:id="@+id/leftForward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_alignBottom="@+id/frontCameraView"
                android:layout_centerHorizontal="true"
                android:width="50dp"
                android:height="70dp"
                android:paddingTop="0dp"
                android:text="⇗"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="48sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_alignBottom="@+id/frontCameraView"
                android:layout_centerHorizontal="true"
                android:width="50dp"
                android:height="70dp"
                android:paddingTop="0dp"
                android:text="⇑"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="48sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/rightForward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_alignBottom="@+id/frontCameraView"
                android:layout_centerHorizontal="true"
                android:width="50dp"
                android:height="70dp"
                android:paddingTop="0dp"
                android:text="⇖"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="48sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_alignBottom="@+id/frontCameraView"
                android:layout_centerHorizontal="true"
                android:width="50dp"
                android:height="70dp"
                android:paddingTop="0dp"
                android:text="⇐"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="48sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_alignBottom="@+id/frontCameraView"
                android:layout_centerHorizontal="true"
                android:width="50dp"
                android:height="70dp"
                android:fontFamily="sans-serif-medium"
                android:paddingTop="0dp"
                android:text="S"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="48sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_alignBottom="@+id/frontCameraView"
                android:layout_centerHorizontal="true"
                android:width="50dp"
                android:height="70dp"
                android:paddingTop="0dp"
                android:text="⇒"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="48sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/leftBackward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_alignBottom="@+id/frontCameraView"
                android:layout_centerHorizontal="true"
                android:width="50dp"
                android:height="70dp"
                android:paddingTop="0dp"
                android:text="⇘"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="48sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/backward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_alignBottom="@+id/frontCameraView"
                android:layout_centerHorizontal="true"
                android:width="50dp"
                android:height="70dp"
                android:paddingTop="0dp"
                android:text="⇓"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="48sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/rightBackward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_alignBottom="@+id/frontCameraView"
                android:layout_centerHorizontal="true"
                android:width="50dp"
                android:height="70dp"
                android:paddingTop="0dp"
                android:text="⇙"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="48sp"
                android:textStyle="normal|bold" />

        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.05"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/rightDutyIncreaseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plus" />

            <ProgressBar
                android:id="@+id/rightDutyIndicator"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:max="100"
                android:progress="20"
                android:progressDrawable="@drawable/motor_duty_indicator" />

            <ImageButton
                android:id="@+id/rightDutyDecreaseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/minus" />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>
