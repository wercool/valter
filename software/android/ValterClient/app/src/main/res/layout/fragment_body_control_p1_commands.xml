<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="ua.in.wercool.valterclient.BodyControlP1Commands">

<TextView
    android:text="BODY CONTROL P1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/textView6"
    android:textAlignment="center"
    android:textStyle="normal|bold" />


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView1"
    android:layout_marginLeft="0.5dp"
    android:layout_marginRight="0.5dp"
    android:layout_marginBottom="0.5dp"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:text="STOP ALL"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_centerHorizontal="true"
                android:background="#ff0000"
                android:textColor="#ffffff"
                android:id="@+id/stopAllButton"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:text="HEAD LED ON"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.5"
                android:id="@+id/headLedOnButton"/>

            <Button
                android:text="HEAD LED OFF"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.5"
                android:id="@+id/headLedOffButton"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:text="LEFT ACCUMULATOR ON"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.5"
                android:id="@+id/leftAccumulatorOnButton"/>

            <Button
                android:text="LEFT ACCUMULATOR OFF"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.5"
                android:id="@+id/leftAccumulatorOffButton"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:text="RIGHT ACCUMULATOR ON"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.5"
                android:id="@+id/rightAccumulatorOnButton"/>

            <Button
                android:text="RIGHT ACCUMULATOR OFF"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.5"
                android:id="@+id/rightAccumulatorOffButton"/>

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:minHeight="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:text="HEAD MOTORS ACTIVATE"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.5"
                android:id="@+id/headMotorsActivateButton"/>

            <Button
                android:text="HEAD MOTORS DEACTIVATE"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.5"
                android:id="@+id/headMotorsDeactivateButton"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:alpha="0.5"
            android:weightSum="1">

            <Button
                android:text="HEAD 24V ON"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.5"
                android:id="@+id/head24VOnButton"/>

            <Button
                android:text="HEAD 24V OFF"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.5"
                android:id="@+id/head24VOffButton"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:alpha="0.5"
            android:weightSum="1">

            <Button
                android:text="HEAD YAW\nON"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.25"
                android:id="@+id/headYawOnButton"/>

            <Button
                android:text="HEAD PITCH\nON"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.25"
                android:id="@+id/headPitchOnButton"/>

            <Button
                android:text="HEAD YAW\nOFF"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.25"
                android:id="@+id/headYawOffButton"/>

            <Button
                android:text="HEAD PITCH\nOFF"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.25"
                android:id="@+id/headPitchOffButton"/>

        </LinearLayout>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:minHeight="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:text="LEFT ARM ROLL\n12V ON"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.25"
                android:id="@+id/leftArm12VOnButton"/>

            <Button
                android:text="LEFT ARM ROLL\n12V OFF"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.25"
                android:id="@+id/leftArm12VOffButton"/>

            <Button
                android:text="RIGHT ARM ROLL\n12V ON"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.25"
                android:id="@+id/rightArm12VOnButton"/>

            <Button
                android:text="RIGHT ARM ROLL\n12V OFF"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.25"
                android:id="@+id/rightArm12VOffButton"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:text="5.5V ON"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.5"
                android:id="@+id/body5_5VOnButton"/>

            <Button
                android:text="5.5V OFF"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.5"
                android:id="@+id/body5_5VOffButton"/>
        </LinearLayout>


    </LinearLayout>

</ScrollView>

</RelativeLayout>
