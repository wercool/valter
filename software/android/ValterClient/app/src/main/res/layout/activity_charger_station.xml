<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_charger_station"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="#000000"
    tools:context="ua.in.wercool.valterclient.ChargerStationActivity">

    <ua.in.wercool.valterclient.MjpegView
        android:background="#000000"
        android:id="@+id/chargerCameraView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:alpha="0.25">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.9"
            android:id="@+id/gridLayout">

            <Button
                android:text="⇑"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/chargerCameraView"
                android:layout_centerHorizontal="true"
                android:id="@+id/up"
                android:layout_row="0"
                android:layout_column="1"
                android:width="50dp"
                android:height="70dp"
                android:textSize="48sp"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:paddingTop="0dp"/>

            <Button
                android:text="⇐"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/chargerCameraView"
                android:layout_centerHorizontal="true"
                android:id="@+id/left"
                android:layout_row="1"
                android:layout_column="0"
                android:width="50dp"
                android:height="70dp"
                android:textSize="48sp"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:paddingTop="0dp"/>

            <Button
                android:text="C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/chargerCameraView"
                android:layout_centerHorizontal="true"
                android:id="@+id/center"
                android:layout_row="1"
                android:layout_column="1"
                android:width="50dp"
                android:height="70dp"
                android:textSize="48sp"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_red_dark"
                android:paddingTop="0dp"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:text="⇒"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/chargerCameraView"
                android:layout_centerHorizontal="true"
                android:id="@+id/right"
                android:layout_row="1"
                android:layout_column="2"
                android:width="50dp"
                android:height="70dp"
                android:textSize="48sp"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:paddingTop="0dp"/>

            <Button
                android:text="⇓"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/chargerCameraView"
                android:layout_centerHorizontal="true"
                android:id="@+id/down"
                android:layout_row="2"
                android:layout_column="1"
                android:width="50dp"
                android:height="70dp"
                android:textSize="48sp"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:paddingTop="0dp"/>


        </GridLayout>

    </LinearLayout>

    <ProgressBar
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:id="@+id/progressBar"
        android:max="100"
        android:progress="0"
        android:visibility="visible"
        android:indeterminate="false" />

</RelativeLayout>
